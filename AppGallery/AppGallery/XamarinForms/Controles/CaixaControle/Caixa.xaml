<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.CaixaControle.Caixa">
    <ContentPage.Content>
        <StackLayout>
            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                WidthRequest="100"
                HeightRequest="100"/>

            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                WidthRequest="30"
                HeightRequest="100"/>
            
            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                WidthRequest="1"
                HeightRequest="100"/>

            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                CornerRadius="5"
                WidthRequest="100"
                HeightRequest="100"/>
            
            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                CornerRadius="50"
                WidthRequest="100"
                HeightRequest="100"/>

            <BoxView 
                Color="Black" 
                HorizontalOptions="Center"
                CornerRadius="15"
                WidthRequest="30"
                HeightRequest="100"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>